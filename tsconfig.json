{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "lib": [
            "dom",
            "dom.iterable"
        ],
        "moduleResolution": "node",
        "jsx": "preserve",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "removeComments": true,
        "allowJs": true,
        "skipLibCheck": true,
        "noEmit": false,
        "strict": false,
        "incremental": true
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        "externals.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}